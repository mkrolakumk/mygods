  </nav>

</nav>
</div>
<div class="container">
<div class="jumbotron" style="background-color: white; border: 0px" >
<div class="container-fluid">
  <div class="row">
    <% @dogs.each do |dog| %>
    <div class="d-flex flex-row bd-highlight mb-2" style="text-align: center" >
      <div class="col-xs-6 col-md-3" style="background-color: #EFEFEF ;  margin:5px; height: 310px; padding: 15px; border-radius: 15px; margin-left: 5%" >

            <%= image_tag dog.image.url(:thumb), style:'width: 100%;  height:180px; overflow:hidden; border-radius:15px' %>

        <div class="caption">
         <h2><%= dog.name %><h2>
        </div>
            <%= link_to 'Pokaż', dog, class: 'btn btn-primary'  %>
            <%= link_to 'Edytuj', edit_dog_path(dog), class: 'btn btn-default'  %>
            <%= link_to 'Usuń', dog, method: :delete, data: { confirm: 'Napewno chcesz usunąć?' }, class: 'btn btn-danger'  %>
      </div>
     </div>
    <% end %>
   </div>

  </div>
</div>
